variable "aws_access_key" {}
variable "aws_secret_key" {}

variable "aws_region" {
  description = "EC2 Region for the VPC"
  default     = "us-west-2"
}

variable "availability_zone" {
  description = "Availability Zone"
  default     = "us-west-2c"
}

variable "ami" {
  description = "Custom AMI generated by us via packer"
  default     = "ami-03c54f372e6caf1d3"
}

variable "vpc-fullcidr" {
  default     = "172.16.0.0/16"
  description = "vpc cdir"
}

variable "key_name" {
  default     = "scoreboard"
  description = "Name of your SSH key in EC2"
}

# You can update this to match your personal public SSH key half.
variable "public_key" {
  default     = "ssh-rsa  thedevilsvoice@protonmail.ch"
  description = "SSH Public key half to use for ubuntu on the new host"
}

variable "key_path" {
  default     = "~/.ssh/id_rsa"
  description = "Path to your SSH private key half on local dev machine"
}
